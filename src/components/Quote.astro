---
import quotes from "../data/quotes.json";

interface Props {
  quoteIdx: number;
}

const { quoteIdx } = Astro.props;
---

<figure
  class="mx-auto max-w-md px-4 py-14 md:max-w-3xl md:px-10 md:pb-28 md:pt-36 md:text-xl lg:pb-32 lg:pt-40 xl:max-w-4xl"
>
  <blockquote
    class="flex flex-col items-center justify-center gap-6 md:flex-row lg:gap-8 xl:gap-24"
  >
    <pre><p lang="bo" class="font-tibetan text-lg md:text-xl">{quotes[quoteIdx].tibetan}</p></pre>
    <pre><p class="font-garamond">{quotes[quoteIdx].english}</p></pre>
  </blockquote>
  <figcaption class="mt-6 text-right font-garamond text-lg md:mt-16 md:text-xl">
    <cite>{quotes[quoteIdx].source}</cite>
  </figcaption>
</figure>
