---
import { Image } from "astro:assets";

import logo from "../assets/icons/logo.svg";
import hamburgerMenu from "../assets/icons/hamburger-menu.svg";
---

<header
  class="fixed bottom-0 z-10 h-16 w-full items-center justify-between bg-white p-2 md:top-0 md:flex md:h-28 md:justify-evenly"
>
  <!-- Logo -->
  <div class="basis-3/4 md:basis-1/3">
    <a href="index.html" class="flex items-center justify-around"
      ><Image src={logo} alt="" height="50" /><div class="shrink-0">
        Jonang Monastery
      </div>
    </a>
  </div>
  <!-- Menu -->
  <div class="hidden font-quicksand font-semibold text-gray-600 md:block">
    <ul class="flex-grow gap-2 md:flex">
      <li>About Us</li>
      <li>News</li>
      <li>Events</li>
      <li>Visitor's Guide</li>
      <li>Support Us</li>
      <li>Contact</li>
    </ul>
  </div>
  <!-- Controls -->
  <div class="md:hidden">
    <button class="align-middle"><Image src={hamburgerMenu} alt="" /></button>
  </div>
</header>
