---
import { Image } from "astro:assets";

import logo from "../assets/icons/logo.webp";
import hamburgerMenu from "../assets/icons/hamburger-menu.svg";
---

<header
  id="header"
  class="opacity-1 fixed bottom-0 z-10 flex max-h-16 w-full items-center justify-between bg-white p-2 transition-all duration-500 ease-in-out motion-reduce:transition-none md:top-0 md:max-h-20 md:justify-between md:shadow-lg lg:max-h-24"
>
  <!-- Logo -->
  <div class="ml-4 basis-3/4 md:basis-1/3">
    <a href="/" class="flex items-center justify-start gap-4">
      <div class="md:w-18 w-14 lg:w-20">
        <Image src={logo} alt="" />
      </div>
      <div class="text-lg">Jonang Monastery</div>
    </a>
  </div>
  <!-- Menu -->
  <div
    class="hidden font-quicksand font-semibold text-gray-600 md:mr-2 md:block xl:mr-12 xl:text-xl"
  >
    <ul class="items-center gap-3 md:flex lg:gap-4 xl:gap-6">
      <li><a href="/about-us/">About Us</a></li>
      <li>News</li>
      <li>Events</li>
      <li>Visitor's Guide</li>
      <li>Support Us</li>
      <li>Contact</li>
      <button class="hidden h-12 w-32 rounded bg-yellow-500 text-white lg:block"
        >Donate</button
      >
    </ul>
  </div>
  <!-- Controls -->
  <div class="md:hidden">
    <button class="align-middle"><Image src={hamburgerMenu} alt="" /></button>
  </div>
</header>

<script>
  const header = document.querySelector("#header")!;

  let prevScrollPos = window.scrollY;
  window.addEventListener("scroll", () => {
    const currentScrollPos = window.scrollY;
    const scrollingUp = currentScrollPos < prevScrollPos;

    header.classList.toggle("hide", !scrollingUp);
    header.setAttribute("aria-hidden", scrollingUp ? "false" : "true");

    prevScrollPos = currentScrollPos;
  });
</script>
