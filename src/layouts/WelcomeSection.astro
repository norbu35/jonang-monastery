---
import Title from "../components/Title.astro";

const res = await fetch(`${import.meta.env.CMS_API_URL}/globals/introText`);
const body = await res.json();
---

<section class="">
  <div class="parallax"></div>
  <div class="section-padding bg-yellow-600 text-white" id="welcome">
    <Title title="Welcome" color="red" />
    <p
      class="mx-auto text-center font-garamond text-xl lg:max-w-3xl"
      set:html={body.body}
    />
    <button
      class="mx-auto mt-14 block h-12 w-44 rounded bg-red-900 font-opensans text-white"
      ><a href={body.buttonLink.slug}>More About Us</a></button
    >
  </div>
</section>
