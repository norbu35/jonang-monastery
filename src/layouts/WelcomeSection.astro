---
import Title from "../components/Title.astro";

const res = await fetch(`${import.meta.env.CMS_API_URL}/globals/introText`);
const body = await res.json();
---

<section>
  <div class="parallax"></div>
  <div
    class="section-padding bg-yellow-600 text-center text-white"
    id="welcome"
  >
    <Title title="Welcome" color="red" />
    <p
      class="mx-auto text-center font-garamond text-xl lg:max-w-3xl"
      set:html={body.body}
    />
    <button class="primary-button mt-12 h-12 w-40"
      ><a href={body.buttonLink.slug}>More About Us</a></button
    >
  </div>
</section>
