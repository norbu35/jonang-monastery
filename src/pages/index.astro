---
import { Image } from "astro:assets";

import Header from "../components/Header.astro";
import TitleBanner from "../components/TitleBanner.astro";
import HeroSection from "../layouts/HeroSection.astro";
import NavigationSection from "../layouts/NavigationSection.astro";
import WelcomeSection from "../layouts/WelcomeSection.astro";
import ActivitiesSection from "../layouts/ActivitiesSection.astro";
import TeachersSection from "../layouts/TeachersSection.astro";
import DonateSection from "../layouts/DonateSection.astro";
import NewsSection from "../layouts/NewsSection.astro";
import Footer from "../components/Footer.astro";

import riteSutra from "../assets/images/rite-sutra.webp";

import "../../base.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Jonang Monastery</title>
  </head>
  <body>
    <Header />
    <HeroSection />
    <main>
      <div class="bg-red-900 text-white">
        <h1 class="py-12 text-center text-3xl">
          Jonang Takten Phuntsok Choeling Monastery
        </h1>
      </div>
      <NavigationSection />
      <WelcomeSection />
      <ActivitiesSection />
      <TeachersSection />
      <NewsSection />
      <DonateSection />
    </main>
    <Footer />
  </body>
</html>

<script>
  const rect = document.querySelector("#welcome")!.getBoundingClientRect();
  const posY = rect.top + window.scrollY;
  const continueButton = document
    .querySelector("#continue-button")!
    .addEventListener("click", () =>
      window.scrollTo({
        top: posY,
        behavior: "smooth",
      }),
    );
</script>
