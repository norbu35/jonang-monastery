---
import Header from "../components/Header.astro";
import HeroSection from "../layouts/HeroSection.astro";
import SiteTitle from "../components/SiteTitle.astro";
import NavigationSection from "../layouts/NavigationSection.astro";
import WelcomeSection from "../layouts/WelcomeSection.astro";
import ProminenceSection from "../layouts/ProminenceSection.astro";
import ActivitiesSection from "../layouts/ActivitiesSection.astro";
import TeachersSection from "../layouts/TeachersSection.astro";
import DonateSection from "../layouts/DonateSection.astro";
import NewsSection from "../layouts/NewsSection.astro";
import Footer from "../components/Footer.astro";

import "../../base.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Discover Main Jonang Takten Phentsok Choeling, 
      a tranquil Buddhist monastery in Shimla, India, rooted in the ancient Jonang tradition."
    />
    <meta
      name="keywords"
      content="Buddhist monastery, Jonang tradition, Shimla, Shentong"
    />
    <title>Jonang Monastery</title>
    <!-- favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <!-- open graph-->
    <meta
      property="og:title"
      content="The main Jonang Takten Phuntsok Choeling Monastery"
    />
    <meta property="og:site_name" content="Jonang Monastery" />
    <meta property="og:url" content="https://jonang.netlify.app" />
    <meta
      property="og:description"
      content="We are a  Buddhist monastery in Shimla, India, 
      following the Tibetan Jonang lineage."
    />
    <meta property="og:type" content="website" />
    <meta
      property="og:image"
      content="https://jonang.netlify.app/logo512x512.jpg"
    />
    <!-- twitter card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@jonang" />
    <meta
      name="twitter:title"
      content="Welcome to the main Jonang Takten Phuntsok Choeling Monastery in Shimla"
    />
    <meta
      name="twitter:description"
      content="We are a Buddhist monastery situated in the serene landscapes of 
      Shimla, northern India, dedicated to preserving and propagating the 
      ancient Jonang tradition. Rooted in profound teachings, our monastery, 
      named Main Jonang Takten Phentsok Choeling, has a rich history marked by 
      the guidance of revered figures such as Lama Jinpa Gyatso and successive 
      abbots like Choeji Nangwa Rinpoche and Geshe Kunga Rinchen. 
      Embracing a comprehensive curriculum, we offer studies in sutras and mantras, 
      Tibetan calligraphy, English, Hindi, mathematics, and physics. 
      Our commitment extends beyond academic pursuits, fostering both spiritual and 
      intellectual growth for our diverse student community. Join us on a 
      transformative journey, where tradition meets modern education in the heart 
      of the Himalayas."
    />
    <meta
      name="twitter:image"
      content="https://jonang.netlify.app/logo512x512.jpg"
    />
    <meta
      name="twitter:image:alt"
      content="Altar adorned with the sacred Kalachakra symbol, a complex wheel 
      representing the cosmic cycles and teachings in Tibetan Buddhism."
    />
  </head>
  <body>
    <Header />
    <HeroSection />
    <main>
      <SiteTitle />
      <WelcomeSection />
      <ProminenceSection />
      <NavigationSection />
      <ActivitiesSection />
      <NewsSection />
      <TeachersSection />
      <DonateSection />
    </main>
    <Footer />
  </body>
</html>
